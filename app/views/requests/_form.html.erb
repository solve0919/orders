<%= form_with(model: request, local: true) do |form| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



    <%= form.hidden_field :contractor_id %>

  <div class="field">
    <%= form.label :money %>
    <%= form.number_field :money %>
  </div>

  <div class="field">
    <%= form.label :delivery %>
    <%= form.select :delivery ,Request.deliveries_i18n.invert %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :hope %>
    <%= form.text_area :hope %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <div class="field">
    <%= form.label :receive %>
    <%= form.select :receive, ['取りに行く','送付'] %>
  </div>

  <div class="field">
    <%= form.label :adress %>
    <%= form.text_field :adress %>
  </div>

  <div class="field">
    <%= form.label :payment %>
    <%= form.select :payment , ['カード払い','銀行振込','LINE Pay','Paypay'] %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= @request.status_i18n %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
