<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Contractor</th>
      <th>Money</th>
      <th>Delivery</th>
      <th>Quantity</th>
      <th>Hope</th>
      <th>Note</th>
      <th>Receive</th>
      <th>Adress</th>
      <th>Payment</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.order_id %></td>
        <td><%= request.contractor_id %></td>
        <td><%= request.money %></td>
        <td><%= request.delivery %></td>
        <td><%= request.quantity %></td>
        <td><%= request.hope %></td>
        <td><%= request.note %></td>
        <td><%= request.receive %></td>
        <td><%= request.adress %></td>
        <td><%= request.payment %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
