<p id="notice"><%= notice %></p>


<h1>発注者一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Postal code</th>
      <th>Prefectures</th>
      <th>Ward</th>
      <th>Address</th>
      <th>Aparatment</th>
      <th>Birthday</th>
      <th>Settlement</th>
      <th>Phone number</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.name %></td>
        <td><%= order.postal_code %></td>
        <td><%= order.prefectures %></td>
        <td><%= order.ward %></td>
        <td><%= order.address %></td>
        <td><%= order.aparatment %></td>
        <td><%= order.birthday %></td>
        <td><%= order.settlement %></td>
        <td><%= order.phone_number %></td>
        <td><%= order.description %></td>
        <td><%= link_to 'Show', order %></td>
        <% if current_user.id == order.user_id %>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end  %>  
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<h4><%= link_to("受注者リストへ","/contractors") %></h4>
